# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de Xano API
XANO_API_URL=https://your-xano-instance.xano.io/api:version
XANO_API_KEY=your-xano-api-key

# Configuración JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# Configuración CORS
CORS_ORIGIN=http://localhost:8080

# Configuración de correo electrónico (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=Sistema de Muebles
SMTP_FROM_EMAIL=noreply@muebles.com

# Configuración de IA (Opcional)
IA_API_KEY=your-ai-api-key
IA_API_URL=https://api.openai.com/v1
# Opciones: huggingface, replicate, openai
IA_PROVIDER=openai

# URL del frontend (para enlaces en correos)
FRONTEND_URL=http://localhost:8080

# Configuración de archivos
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100